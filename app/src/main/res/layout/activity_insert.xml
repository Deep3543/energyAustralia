<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Insert">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="570dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Imageinsert"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@drawable/ui" />

            <TextView
                android:id="@+id/TextVolunteerForm"
                android:layout_width="400dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Insert Electricity Bill Details"
                android:textAlignment="center"
                android:textColor="#0C0C0C"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/etCno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="23dp"
                android:layout_weight="1"
                android:background="@drawable/textfileds"
                android:ems="10"
                android:hint=" Enter Customer No"
                android:inputType="number"
                android:padding="15dp" />

            <EditText
                android:id="@+id/etCname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="23dp"
                android:layout_weight="1"
                android:background="@drawable/textfileds"
                android:ems="10"
                android:hint="Enter Customer Name"
                android:inputType="text"
                android:padding="15dp" />

            <EditText
                android:id="@+id/etNoOfunitsConsumed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="23dp"
                android:layout_weight="1"
                android:background="@drawable/textfileds"
                android:ems="10"
                android:hint="Enter Consumed Units"
                android:inputType="number"
                android:padding="15dp" />

            <EditText
                android:id="@+id/etPricePerUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="23dp"
                android:layout_weight="1"
                android:background="@drawable/textfileds"
                android:ems="10"
                android:hint="Enter Price Per Unit"
                android:inputType="number"
                android:padding="15dp" />

            <Button
                android:id="@+id/BtnInsertDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="135dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/btn_style"
                android:hint="Insert"
                android:textAllCaps="false"
                android:textColorLink="#fff"
                android:textSize="21dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>